<Window x:Class="RegistrationWithStyles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationWithStyles"
        mc:Ignorable="d"
        Title="Registration" Height="500" Width="500">
    <Grid>
        <TextBox Name="loginTextBox" HorizontalAlignment="Center" Margin="70,123,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" />
        <TextBlock Text="Login:" HorizontalAlignment="Left" Margin="125,121,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.451,1.484" />
        <TextBox Name="emailTextBox" HorizontalAlignment="Center" Margin="70,160,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" />
        <TextBlock Text="Email:" HorizontalAlignment="Left" Margin="128,158,0,0" VerticalAlignment="Top" FontSize="20" />
        <TextBox Name="phoneTextBox" HorizontalAlignment="Center" Margin="70,200,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" />
        <TextBlock Text="Phone:" HorizontalAlignment="Left" Margin="118,198,0,0" VerticalAlignment="Top" FontSize="20" />
        <PasswordBox Name="passwordTextBox" HorizontalAlignment="Center" Margin="70,240,0,0" VerticalAlignment="Top" Width="180" Height="25" />
        <TextBlock Text="Password:" HorizontalAlignment="Left" Margin="91,238,0,0" VerticalAlignment="Top" FontSize="20" />
        <PasswordBox Name="repeatPasswordTextBox" HorizontalAlignment="Center" Margin="70,280,0,0" VerticalAlignment="Top" Width="180" Height="25" Cursor="IBeam" />
        <TextBlock Text="Repeat password:" HorizontalAlignment="Left" Margin="25,278,0,0" VerticalAlignment="Top" FontSize="20" />
        <Button Content="Register" Click="RegisterButtonClick" HorizontalAlignment="Left" Margin="235,340,0,0" VerticalAlignment="Top" Width="100" Height="35" Cursor="Hand" FontSize="20" />
        <Button Content="Dark Theme" Click="DarkTheme" HorizontalAlignment="Left" Margin="359,418,0,0" VerticalAlignment="Top" Height="29" Width="108" FontSize="15" />
        <Button Content="Light Theme" Click="LightTheme" HorizontalAlignment="Left" Margin="235,418,0,0" VerticalAlignment="Top" Height="29" Width="108" FontSize="15" />
    </Grid>
</Window>
